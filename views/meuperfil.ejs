                    </div>
                </div>

              

            </div>
        </div>

        <div class="button">

            <button id="submitButton">Enviar</button>
        </div>


    </form>

    <div id="resultado" class="centered" style="display: none;">
        <h2>Perfil do Usuário:</h2>
        <img id="perfilFoto" width="100">
        <p><strong>Nome de Usuário:</strong> <span id="perfilUsername"></span></p>
        <p><strong>Idade:</strong> <span id="perfilIdade"></span></p>
        <p><strong>Cidade:</strong> <span id="perfilCidade"></span></p>
        <p><strong>Interesses:</strong> <span id="perfilInteresses"></span></p>

        <button onclick="voltarAoFormulario()">Editar Perfil</button>
        <a href="/escolha-seu-tema" class="btn-salvar">Salvar</a>
    </div>

    <script>
        // Função para mostrar o resultado
        function exibirResultado() {
            document.getElementById("userForm").style.display = "none";
            document.getElementById("resultado").style.display = "flex";
        }

        // Função para voltar ao formulário
        function voltarAoFormulario() {
            document.getElementById("userForm").style.display = "block";
            document.getElementById("resultado").style.display = "none";
        }

        // Função para salvar informações do usuário
        document.getElementById("submitButton").addEventListener("click", function (e) {
            e.preventDefault();

            const foto = document.getElementById("foto").files[0];
            const username = document.getElementById("username").value;
            const idade = document.getElementById("idade").value;
            const cidade = document.getElementById("cidade").value;

            const interessesSelecionados = Array.from(document.querySelectorAll(".interesse-item.selected")).map(item => item.dataset.value);

            if (foto) {
                const reader = new FileReader();
                reader.onload = function (event) {
                    document.getElementById("perfilFoto").src = event.target.result;
                };
                reader.readAsDataURL(foto);
            }

            document.getElementById("perfilUsername").textContent = username;
            document.getElementById("perfilIdade").textContent = idade;
            document.getElementById("perfilCidade").textContent = cidade;
            document.getElementById("perfilInteresses").textContent = interessesSelecionados.join(", ");

            exibirResultado();
        });

        // Função para selecionar interesses
        Array.from(document.querySelectorAll(".interesse-item")).forEach(item => {
            item.addEventListener("click", function () {
                this.classList.toggle("selected");
            });
        });

        // Função para dropdown customizado
        Array.from(document.querySelectorAll(".custom-select .selected")).forEach(selectedDiv => {
            selectedDiv.addEventListener("click", function () {
                const optionsDiv = this.nextElementSibling;
                optionsDiv.style.display = optionsDiv.style.display === "none" ? "block" : "none";
            });
        });

        Array.from(document.querySelectorAll(".custom-select .option")).forEach(option => {
            option.addEventListener("click", function () {
                const selectedDiv = this.parentElement.previousElementSibling;
                selectedDiv.textContent = this.textContent;
                this.parentElement.style.display = "none";
            });
        });
    </script>
</body>

</html>