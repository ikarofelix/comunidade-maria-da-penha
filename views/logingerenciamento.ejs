<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Gerenciamento</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="login.css">

    <!-- SDK do Firebase -->
    <script src="https://www.gstatic.com/firebasejs/8.2.1/firebase-app.js"></script>
    <script src="https://www.gstatic.com/firebasejs/8.2.1/firebase-auth.js"></script>
</head>

<body>

    <div class="login-container">
        <h2>Login</h2>
        <form id="login-form">
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required placeholder="Digite seu email">

            <label for="password">Senha:</label>
            <input type="password" id="password" name="password" required placeholder="Digite sua senha">

            <button type="submit">Entrar</button>
        </form>
    </div>
    <!-- SDK do Firebase -->
    <script src="https://www.gstatic.com/firebasejs/8.2.1/firebase-app.js"></script>
    <script src="https://www.gstatic.com/firebasejs/8.2.1/firebase-auth.js"></script>

    <script src="script.js"></script>


    <script>
        // Configurações do Firebase
        var firebaseConfig = {
            apiKey: "AIzaSyCYReocq-3ZcEVbwFR3OQS-R9OJ-EfL2Os",
            authDomain: "login---gerenciamento.firebaseapp.com",
            projectId: "login---gerenciamento",
            storageBucket: "login---gerenciamento.appspot.com",
            messagingSenderId: "710259137879",
            appId: "1:710259137879:web:537f5924faa6a8ef5ef212",
        };

        // Inicialização do Firebase
        firebase.initializeApp(firebaseConfig);

        // Referência para o serviço de autenticação
        var auth = firebase.auth();

        function login() {
            var email = document.getElementById("email").value;
            var password = document.getElementById("password").value;

            auth.signInWithEmailAndPassword(email, password).then((userCredential) => {
                // Usuário logado com sucesso
                var user = userCredential.user;
                window.location.href = "gerenciamento.html";
            }).catch((error) => {
                console.error("Erro ao logar: ", error.message);
                alert(error.message);
            });
        }

        // Quando o formulário é submetido, chame a função de login
        document.getElementById("login-form").addEventListener("submit", function (event) {
            event.preventDefault();
            login();
        });

    </script>
</body>

</html>
